<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.h.mynote.video.SurfaceActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <SurfaceView
            android:id="@+id/sfv_video"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <RelativeLayout
            android:id="@+id/rl_videoSeek"
            android:layout_alignBottom="@+id/sfv_video"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <SeekBar
                android:id="@+id/sb_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="2dp"
                android:maxHeight="2dp"
                android:progressDrawable="@drawable/seekbar"
                android:thumb="@drawable/seekbar_thumb"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sb_video">
                <TextView
                    android:id="@+id/tv_videoStart"
                    android:text="00:00:00"
                    android:textColor="@color/text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_videoEnd"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/text_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_vPrevious"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/player_previous"/>
        <ImageView
            android:id="@+id/iv_videoplay"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/iv_vPrevious"
            android:src="@drawable/play_normal"/>
        <ImageView
            android:id="@+id/iv_videoPause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/iv_videoplay"
            android:src="@drawable/player_pause"/>
        <ImageView
            android:id="@+id/iv_videoNext"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/iv_videoPause"
            android:src="@drawable/player_next"/>
        <ImageView
            android:id="@+id/iv_shot"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/iv_videoNext"
            android:contentDescription="截屏"
            android:src="@drawable/screenshot"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_display"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
